<refentry id="p4stat">
  <refmeta>
    <refentrytitle>p4stat</refentrytitle>
    <manvolnum>8</manvolnum>
  </refmeta>

  <refnamediv>
    <refname>p4stat</refname>
    <refpurpose>
      display informations about the <filename>p4sock</filename> protocol.
    </refpurpose>
  </refnamediv>

  <refsynopsisdiv>
    <cmdsynopsis>
      <command>p4stat</command>
      <arg>-vsn?</arg>
      <arg>-v </arg>
      <arg>-s </arg>
      <arg>-n </arg>
      <arg>-? </arg>
      <arg>--sock </arg>
      <arg>--net </arg>
      <arg>--version </arg>
      <arg>--help </arg>
      <arg>--usage </arg>
    </cmdsynopsis>
  </refsynopsisdiv>

  <refsect1>
    <title>Description</title>
    <para>
      Display information for sockets and network connections using the &ps4;
      protocol <emphasis>p4sock</emphasis>.
    </para>
  </refsect1>

  <refsect1>
    <title>Options</title>
    <variablelist>
      <varlistentry>
	<term>
	  <option>-s</option>
	  <option>, --sock</option>
        </term>
	<listitem>
	  <para>Display information about open
          <emphasis>p4sock</emphasis> sockets.
            <!-- TODO: fg: describe output -->
	  </para>
	</listitem>
      </varlistentry>
      <varlistentry>
	<term>
	  <option>-n</option>
	  <option>, --net</option>
        </term>
	<listitem>
	  <para>Display information of network connections using
            <emphasis>p4sock</emphasis>.
           <!-- TODO: fg: describe output -->
	  </para>
	</listitem>
      </varlistentry>

      <varlistentry>
	<term>
	  <option>-v</option>
	  <option>, --version</option>
        </term>
	<listitem>
	  <para>Output version information and exit.</para>
	</listitem>
      </varlistentry>

      <varlistentry>
	<term>
	  <option>-?</option>
	  <option>, --help</option>
        </term>
	<listitem>
	  <para>Show a help message.</para>
	</listitem>
      </varlistentry>
      <varlistentry>
	<term>
	  <option>--usage</option>
	</term>
	<listitem>
	  <para>Display a brief usage message.</para>
	</listitem>
      </varlistentry>
    </variablelist>
  </refsect1>

