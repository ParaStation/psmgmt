#
#  Configuration file for ParaStation cgroup plugin
#

# Debug mask (default: 0x000000)
#
#   0x00001:	Be verbose
#
# DEBUG_MASK = 0

# Location of the root cgroup in the filesystem (default: @default_cgroup_root@)
#
# CGROUP_ROOT = @default_cgroup_root@

# Name of the cgroup created and used by the plugin (default: @default_cgroup_name@)
#
# CGROUP_NAME = @default_cgroup_name@

# Amount of memory assigned to the common cgroup (default: -1 (unlimited))
#
# MEM_LIMIT = -1

# Amount of memory+swap assigned to the common cgroup (default: -1 (unlimited))
#
# MEMSW_LIMIT = -1
