CFLAGS += -O2 @CFLAG_WALL@ @CFLAG_G@ @CFLAG_COMPAT@
CPPFLAGS += -I@top_srcdir@/include -I. @CPPFLAG_MMD@
SRCDIR = @srcdir@
TOP_SRCDIR = @top_srcdir@
TARGET_OS := @target_os@

VPATH += $(SRCDIR)

LIBDIR := ../lib

include $(TOP_SRCDIR)/Makefile.version

ifeq ("$(TARGET_OS)","linux")
.LIBPATTERNS+= $(LIBDIR)/lib%.a
else
.LIBPATTERNS:=  /usr/shlib/lib%.so $(.LIBPATTERNS) $(LIBDIR)/lib%.a
endif

TOOLS:= psiadmin psid psilogger mlisten
TOOLS += psmstart mpirun_chp4 psispawn mpirun_chgm gmspawner
TOOLS += test_pse test_config

TARGETS = $(TOOLS) test_config_parsing test_logging

all bin: $(TOOLS)

test_pse psmstart mpirun_chp4 mpirun_chgm mlisten test_config: \
	LOADLIBES+=-Wl -lpopt

test_pse: test_pse.o -lpse -lpsi

test_config: test_config.o -lputil -lpscommon

psmstart: psmstart.o -lpse -lpsi

mpirun_chp4: mpirun_chp4.o -lpse -lpsi

psispawn: psispawn.o -lpsi

mpirun_chgm: mpirun_chgm.o -lpse -lpsi

gmspawner: gmspawner.o -lpsi
gmspawner: LOADLIBES:=-lpthread -lpopt

mlisten: mlisten.o

test_config_parsing: -lputil -lpscommon

test_logging: test_logging.o -lpscommon

# psiadmin
VPATH += $(SRCDIR)/admin
psiadmin: psiadmin.o commands.o adminparser.o
psiadmin: -lpsi -lputil
psiadmin: LOADLIBES:=-lreadline -lhistory -l@LIBCURSES@ -lpopt

adminparser.o: CPPFLAGS += -DVERSION_psmgmt='"$(VERSION_psmgmt)"' \
		-DRELEASE_psmgmt='"$(RELEASE_psmgmt)"'

# psid
VPATH += $(SRCDIR)/daemon
psid: psid.o psidutil.o psidtask.o psidspawn.o psidforwarder.o
psid: psidsignal.o psidmsgbuf.o psidrdp.o psidclient.o psidcomm.o
psid: psidinfo.o psidoption.o psidpartition.o psidstatus.o
psid: -lputil -lpscommon -lutil -lpslog
psid: LOADLIBES:=-lm -lpopt

psidinfo.o: CPPFLAGS += -DVERSION_psmgmt='"$(VERSION_psmgmt)"' \
		-DRELEASE_psmgmt='"$(RELEASE_psmgmt)"'

# logger
VPATH += $(SRCDIR)/logger
psilogger: psilogger.o -lpslog -lpscommon -lm

parastation: $(TOP_SRCDIR)/scripts/parastation@TRU64FILEADD@
	cp $< $@

# WARNING!!! if DEPEXTENSION from configure is empty, make clean remove all files!!
DEPFILES := $(wildcard *@DEPEXTENSION@) dummy.d

.PHONY: clean distclean

clean:
	$(RM) $(DEPFILES) $(EXTRACLEAN) *.o

distclean: clean
	$(RM) $(TARGETS)

-include $(DEPFILES)
