case "$1" in
    start)
        su -s "/bin/sh" -c "@bindir@/psaccounter -p gzip -e" nobody
	;;

    stop)
        killall psaccounter 2>&1 1>/dev/null	
	;;

    statusheader)
	;;

    status)
	;;

    *)
	echo "Usage: $0 {start|stop|statusheader|status}"
	exit 1
	;;
esac

exit 0
