LIBS := psport pshal arg pvar pse pscommon psi putil pslog
ifeq ("@target_os@","linux")
LIBS += psport4
endif

default: lib
.PHONY: $(LIBS)


lib: $(LIBS)

$(LIBS): 
	$(MAKE) -C $@


clean:
	@for i in $(LIBS) ; do \
		$(MAKE) -C $$i clean ;\
	done


