SUBDIRS := pse pscommon psi putil pslog

.PHONY: all $(SUBDIRS)

all: $(SUBDIRS)

$(SUBDIRS): 
	$(MAKE) -C $@ all


.PHONY: clean distclean

clean distclean:
	@for i in $(SUBDIRS) ; do \
		$(MAKE) -C $$i $@; \
	done
