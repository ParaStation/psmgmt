LIBS := pse pscommon psi putil pslog
ifeq ("@target_os@","linux")
# LIBS += psport4 old fe version without sharedmem
LIBS += psport4shm
endif

all: lib

.PHONY: $(LIBS) clean realclean


lib: $(LIBS)

$(LIBS): 
	$(MAKE) -C $@


clean realclean:
	@for i in $(LIBS) ; do \
		$(MAKE) -C $$i $@ ;\
	done


