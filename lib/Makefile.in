SUBDIRS := pse pscommon psi putil pslog

.PHONY: all $(SUBDIRS)

all: $(SUBDIRS)

$(SUBDIRS): 
	$(MAKE) -C $@ all


.PHONY: clean distclean

clean distclean:
	@for i in $(LIBS) ; do \
		$(MAKE) -C $$i $@; \
	done
