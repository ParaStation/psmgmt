LIBS := pse pscommon psi putil pslog

all: lib

.PHONY: $(LIBS) clean realclean


lib: $(LIBS)

$(LIBS): 
	$(MAKE) -C $@


clean realclean:
	@for i in $(LIBS) ; do \
		$(MAKE) -C $$i $@ ;\
	done


