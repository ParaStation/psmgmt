SRCDIR = @abs_srcdir@
TOPSRCDIR = @abs_top_srcdir@

INSTALL = @INSTALL@

################################

export LIBNAME := putil
export LIBOBJS := mcast.o rdp.o timer.o selector.o env.o parser.o \
		psstrings.o hardware.o config_parsing.o \
		psdaemonprotocol.o kvs.o kvscommon.o psparamspace.o
export LIBVPATH := $(SRCDIR)
export LIBINC = -I$(TOPSRCDIR)/include -I$(TOPSRCDIR)/bin/daemon
export LIBDSTDIR = ../..

################################

#only static
all lib: staticlib

sharedlib staticlib: %: %.dir
	$(MAKE) -C $@.dir -f ../../Makefile.$@

sharedlib.dir staticlib.dir:
	$(INSTALL) -d $@

clean distclean: sharedlib.dir staticlib.dir
	$(MAKE) -C sharedlib.dir -f ../../Makefile.sharedlib $@
	rmdir sharedlib.dir
	$(MAKE) -C staticlib.dir -f ../../Makefile.staticlib $@
	rmdir staticlib.dir
