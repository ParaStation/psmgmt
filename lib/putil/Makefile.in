# Use absolute paths !!!
SRCDIR := $(shell cd @srcdir@;pwd)
TOPSRCDIR := @TOP_SRCDIR@

################################

export LIBNAME := putil
export LIBOBJS := mcast.o rdp.o timer.o selector.o env.o parser.o pslic.o \
		psstrings.o hardware.o psnodes.o config_parsing.o \
		psdaemonprotocol.o
export LIBVPATH := $(SRCDIR)
export LIBINC = -I$(TOPSRCDIR)/include
export LIBDSTDIR = ../..

################################

#only static
all lib: staticlib

sharedlib staticlib: sharedlib.dir staticlib.dir
	$(MAKE) -C $@.dir -f ../../Makefile.$@

sharedlib.dir staticlib.dir:
	mkdir -p $@

clean realclean: sharedlib.dir staticlib.dir
	$(MAKE) -C sharedlib.dir -f ../../Makefile.sharedlib $@
	$(MAKE) -C staticlib.dir -f ../../Makefile.staticlib $@
