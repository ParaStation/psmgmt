CFLAGS += -O3 @CFLAG_WALL@ @CFLAG_G@ @CFLAG_COMPAT@
CPPFLAGS += $(LIBINC) @CPPFLAG_MMD@
RANLIB := @RANLIB@

# LIBNAME = psport
# LIBOBJS = psport.o
# LIBVPATH = @srcdir@
# LIBINC = -I@top_srcdir@/include
# LIBDSTDIR = ../..
_LIBDEPS := $(LIBOBJS:.o=@DEPEXTENSION@)

VPATH += $(LIBVPATH)

all: $(LIBDSTDIR)/lib$(LIBNAME).a

$(LIBDSTDIR)/lib$(LIBNAME).a: $(LIBOBJS)
	$(AR) rcv $@ $(LIBOBJS)
	$(RANLIB) $@

clean:
	$(RM) $(_LIBDEPS) $(LIBOBJS) 


-include $(_LIBDEPS)
