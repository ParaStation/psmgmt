CFLAGS += -O3 @CFLAG_WALL@ @CFLAG_G@ @CFLAG_COMPAT@
CPPFLAGS += $(LIBINC) @CPPFLAG_MMD@
RANLIB := @RANLIB@

_LIBDEPS := $(LIBOBJS:.o=@DEPEXTENSION@)

VPATH += $(LIBVPATH)

all: $(LIBDSTDIR)/lib$(LIBNAME).a

$(LIBDSTDIR)/lib$(LIBNAME).a: $(LIBOBJS)
	$(AR) rcv $@ $(LIBOBJS)
	$(RANLIB) $@

clean:
	$(RM) $(_LIBDEPS) $(LIBOBJS) 

realclean: clean
	$(RM) $(LIBDSTDIR)/lib$(LIBNAME).a


-include $(_LIBDEPS)
