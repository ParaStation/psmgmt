#!/bin/bash
#
# Copyright (c) 2008 ParTec Cluster Competence Center GmbH, Munich
# All rights reserved.
#
# This script repeatedly kills and restarts the local ParaStation daemon psid.
#
# Author: Norbert Eicker <eicker@par-tec.com>
#
# $Id$
#

if [ $USER != "root" ]; then
    echo $0 must be run as root
    exit 1
fi

if [ $# -ne 2 ]; then
    echo Usage: ${0} \<disabledSec\> \<sleepSec\>
    exit 1
fi

disabled=${1}
sleep=${2}

log=log.killer@`hostname`
exec 8> $log 
echo "log to $log"

i=0
while true; do

    if [ -f stopIt ]; then
	echo `date` Stopping after $i >&8
	exit 0
    fi

    pidList=`pidof psid`

    rootPSIDs=0
    for pid in ${pidList}; do
	parent=`ps ho ppid ${pid}`
	if [ ${parent:-0} -eq 1 ]; then
	    ((rootPSIDs++))
	    pidToKill=${pid}
	fi
    done

    if [ ${rootPSIDs} -ne 1 ]; then
	echo `date` Wrong number ${rootPSIDs} of ParaStation daemons found >&8
	exit 1
    fi

    kill -9 ${pidToKill}

    sleep ${disabled}

    psiadmin -c quit

    sleep ${sleep}

    if ((i%100==0)); then
	echo `date`  $i >&8
    fi

    ((i++));
done

