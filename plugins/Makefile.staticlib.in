CFLAGS += -O3 -fPIC @CFLAG_WALL@ @CFLAG_G@ @CFLAG_COMPAT@
CPPFLAGS += $(LIBINC) @CPPFLAG_MMD@
RANLIB := @RANLIB@

_LIBDEPS := $(LIBOBJS:.o=@DEPEXTENSION@)

VPATH += $(LIBVPATH)

all: $(LIBDSTDIR)/$(LIBNAME).a

$(LIBDSTDIR)/$(LIBNAME).a: $(LIBOBJS)
	$(AR) rcv $@ $(LIBOBJS)
	$(RANLIB) $@

clean:
	$(RM) $(_LIBDEPS) $(LIBOBJS) 

distclean: clean
	$(RM) $(LIBDSTDIR)/$(LIBNAME).a


-include $(_LIBDEPS)
