SUBDIRS := lib bin dist

.PHONY: all $(SUBDIRS)
all: lib bin

$(SUBDIRS):
	$(MAKE) -C $@

.PHONY: install
install:
	$(MAKE) -C dist install DISTPATH=$(RPM_BUILD_ROOT)/opt/parastation

.PHONY: rpm srpm
rpm srpm:
	$(MAKE) -C dist $@

.PHONY: tar
tar: dist

.PHONY:clean distclean

clean distclean:
	@for i in $(SUBDIRS) ; do \
		$(MAKE) -C $$i $@; \
	done
