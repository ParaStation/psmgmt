SUBDIRS := lib bin docu

DISTDIRS := dist_fe dist_docu dist_mgmt
SUBDIRS += $(DISTDIRS)

all: lib bin
.PHONY: all $(SUBDIRS) clean realclean

lib:
	$(MAKE) -C lib

bin:
	$(MAKE) -C bin

docu:
	$(MAKE) -C docu

$(DISTDIRS):
	$(MAKE) -C $@

clean realclean:
	@for i in $(SUBDIRS) ; do \
		$(MAKE) -C $$i $@ ;\
	done

